<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{device}}</h3>
    </div>
    <div class="panel-body">
        <p>{{lang.pinName}}: {{pinName}}</p>
        {{#if temperature}}
        <p>{{lang.temperature}}: {{temperature}}</p>
        {{/if}}

        <span>{{lang.funcName}}:</span>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <span class="js-func-name">{{funcName}}</span> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                {{#each funcs}}
                <li><a href="#" class="js-func" data-value="{{@key}}">{{this}}</a></li>
                {{/each}}
            </ul>
        </div>
        <button class="btn btn-primary pull-right js-save">{{lang.apply}}</button>
    </div>
</div>
