<form class="form-inline" role="form" style="margin-bottom: 10px;">
    <div class="form-group">
        <input type="number" class="form-control js-temperature" placeholder="Temperature" value="{{temperature}}">
    </div>
    <div class="form-group">
        <input type="number" class="form-control js-time" placeholder="Time" value="{{time}}">
    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle js-type" data-toggle="dropdown">
            {{timeName}} <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            {{#each timeNames}}
            <li><a href="#" class="js-type-item" data-value="{{@key}}">{{this}}</a></li>
            {{/each}}
        </ul>
    </div>
    <button class="btn btn-danger js-delete pull-right">{{lang.delete}}</button>
</form>
